<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/id_fragment_one"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toTopOf="@+id/id_fragment_two"
        class = "com.example.myapplication.FirstFragment"
        tools:layout="@layout/fragment_first" />

    <fragment
        android:id="@+id/id_fragment_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        tools:layout="@layout/fragment_second"
        class = "com.example.myapplication.SecondFragment"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>